<PageTitle>@GetPageTitle()</PageTitle>

<div>
    <div class="map-space-reserver" id="mapContainerContainer">
        <MapContainer
            @ref="mapContainer"
            Locations="@Locations"
            OnLocationChange="@SelectedLocationChanged"></MapContainer>

    </div>
    <div class="location-info-container">
        @if (SelectedLocation != null)
        {
