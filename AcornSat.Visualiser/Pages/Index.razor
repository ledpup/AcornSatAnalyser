    }

    protected override async Task OnParametersSetAsync()
    {
        Guid locationId = Guid.Parse(LocationId ?? "aed87aa0-1d0c-44aa-8561-cde0fc936395");

        await SelectedLocationChangedInternal(locationId);

        await base.OnParametersSetAsync();
    }

    protected async Task BuildDataSets()
    {
        Datasets = new List<DataSet>();

        var relativeToAverage = SelectedChartType == ChartType.Bar;
        var generalAggregationMethod = relativeToAverage ? AggregationMethod.GroupByDayThenAverage_Relative : AggregationMethod.GroupByDayThenAverage;

        var selectedDataTypes = CreateSelectedDataTypesList();
        var selectedDataAdjustments = CreateSelectedDataAdjustmentsList();
       
        foreach (var dataType in selectedDataTypes)
        {
            foreach (var dataAdjustment in selectedDataAdjustments)
            {
                if (!SelectedDataSetDefinition.MeasurementDefinitions.Any(x => x.DataType == dataType))
                {
                    continue;
                }
                var requestDataAdjustment = dataAdjustment;
                if (selectedDataAdjustments.Count == 1 && SelectedDataSetDefinition.MeasurementDefinitions.Count(x => x.DataType == dataType) == 1)
                {
                    if (!SelectedDataSetDefinition.MeasurementDefinitions.Any(x => x.DataType == dataType && x.DataAdjustment == dataAdjustment))
                    {
                        requestDataAdjustment = SelectedDataSetDefinition.MeasurementDefinitions.Single(x => x.DataType == dataType).DataAdjustment;
                    }
                }
                var aggregationMethod = dataType == DataType.Rainfall ? AggregationMethod.Sum : generalAggregationMethod;

                if (SelectedYears.Any())
                {
                    foreach (var year in SelectedYears)
                    {
                        var dataset = (await DataService.GetDataSet(dataType, SelectedResolution, requestDataAdjustment, SelectedLocationId, aggregationMethod: aggregationMethod, year, dayGrouping: SelectedDayGrouping, dayGroupingThreshold: SelectedDayGroupThreshold)).ToList();
                        Datasets.AddRange(dataset);
                    }
                }
                else
                {
                    var dataset = (await DataService.GetDataSet(dataType, SelectedResolution, requestDataAdjustment, SelectedLocationId, aggregationMethod: aggregationMethod, dayGrouping: SelectedDayGrouping, dayGroupingThreshold: SelectedDayGroupThreshold)).ToList();
                    Datasets.AddRange(dataset);   
                }
            }
        }

        // We don't always reload the list of DatasetYears.
        // We reload DatasetYears when changing location or datatypes.
        // Don't reload when changing the data resolution.
        if (DatasetYears == null)
        {
            DatasetYears = Datasets.SelectMany(x => x.Years).Distinct().OrderBy(x => x).ToList();
        }

        await mapContainer.ScrollToPoint(new LatLng(SelectedLocation.Coordinates.Latitude, SelectedLocation.Coordinates.Longitude));

        await HandleRedraw();       
    }

    List<DataType> CreateSelectedDataTypesList()
    {
