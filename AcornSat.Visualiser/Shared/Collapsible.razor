<div>
    <span @onclick="CollapserOnClick" class="collapser">
        @if (ShowContent)
        {
            <span class="oi oi-chevron-top" aria-hidden="true"></span>
        }
        else
        {
            <span class="oi oi-chevron-bottom" aria-hidden="true"></span>    
        }

        @Title
    </span>
</div>

<div>
    @if (ShowContent)
    {
        @Content
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment Content { get; set; }

    [Parameter]
    public EventCallback<bool> OnShowOrHide { get; set; }

    bool ShowContent = true;

    void CollapserOnClick(EventArgs args)
    {
        ShowContent = !ShowContent;

        OnShowOrHide.InvokeAsync(ShowContent);
    }
}
